<p id="notice"><%= notice %></p>

<h1>Acercades</h1>

<table>
  <thead>
    <tr>
      <th>Descripcion</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @acercades.each do |acercade| %>
      <tr>
        <td><%= acercade.descripcion %></td>
        <td><%= link_to 'Show', acercade %></td>
        <td><%= link_to 'Edit', edit_acercade_path(acercade) %></td>
        <td><%= link_to 'Destroy', acercade, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

