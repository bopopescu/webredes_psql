<%= form_with(model: aviso, local: true) do |form| %>
  <% if aviso.errors.any? %>
      <% aviso.errors.full_messages.each do |message| %>
         <%= js add_gritter(message, title: "Aviso", sticky: false) %>
      <% end %>
  <% end %>

  <div class="field">
    <%= form.label :"título" %>
    <%= form.text_field :titulo, size: 60 %>
  </div>

  <div class="field">
    <%= form.label :"descripción" %>
    <%= form.trix_editor :detalle %>
  </div>

  <div class="field">
    <label class="btn btn-default btn-lg">
      <%= form.file_field :imagen %>
    </label>
  </div>
<p></p>
  <div class="actions">
    <%= form.submit "Guardar", class: "btn btn-primary btn-lg", size: 50 %>
    <%= link_to 'Mostrar', @aviso, class: "btn btn-default btn-lg", size: 50 %> 
    <%= link_to 'Regresar a Blog', avisos_path, class: "btn btn-info btn-lg", size: 50 %>
  </div>

<% end %>
