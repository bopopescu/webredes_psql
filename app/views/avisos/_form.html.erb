<%= form_with(model: aviso, local: true) do |form| %>
  <% if aviso.errors.any? %>
      <% aviso.errors.full_messages.each do |message| %>
         <%= js add_gritter(message, title: "Aviso", sticky: false) %>
      <% end %>
  <% end %>

  <div class="form-group">
    <%= form.label :"título" %>
    <%= form.text_field :titulo, size: 60 %>
  </div>

  <div class="form-group">
    <%= form.label :"descripción" %>
    <%= form.text_field :detalle, size: 100 %>
  </div>

  <div class="btn btn-default btn-lg">
    <%= form.label :archivo %>
    <%= form.file_field :archivo, accept: 'application/pdf' %>
  </div>

   

  <!-- <span>
      <input type="text" id="ernita">
     
</span> -->

<p></p>
  <div class="actions">
    <%= form.submit "Guardar", class: "btn btn-primary btn-md", size: 50 %>
    <%= link_to 'Regresar a Avisos', avisos_path, class: "btn btn-info btn-md", size: 50 %>
  </div>

<% end %>


<script>
  $(document).on('change', ':file', function() {
    var input = $(this),
        numFiles = input.get(0).files ? input.get(0).files.length : 1,
        label = input.val().replace(/\\/g, '/').replace(/.*\//, '');
        input.trigger('fileselect', [numFiles, label]);
