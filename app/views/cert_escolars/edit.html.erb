<div id="body-cert">
	<h1>Seguimiento Certificacion</h1>
	<%= form_with(model: @cert_escolar, local: true) do |form| %>
  <% if @cert_escolar.errors.any? %>
      <% @cert_escolar.errors.full_messages.each do |message| %>
        <%= js add_gritter(message, title: "Aviso", sticky: false) %>
      <% end %>
  <% end %>


  <% if logged_in?(:certificador, :cert_site_admin)  %>
    <div class="field">
      <%= form.label :paso %>
      <%= form.text_field :paso, size: 10 %>
    </div>
    <div class="field">
      <%= form.label :estandar %>
      <%= form.text_field :estandar, size: 10 %>
    </div>
  
    <div class="field">
      <%= form.label :puntaje %>
      <%= form.text_field :puntaje, size: 10 %>
    </div>
  <% else %>
    <% @estandar = EstandarEtapaCertificacion.find_by(etapa_certificacion_id: @cert_escolar.paso, estandar_id: @cert_escolar.estandar) %>
     <h4><%= @cert_escolar.paso.to_s + "." + @cert_escolar.estandar.to_s + " " + @estandar.titulo %></h4>
     <h3>Status: &nbsp;<%= @cert_escolar.status %></h3>
  <% end %><hr>
 
    <div class="row">
    <div class="container">
      <h3><%= form.label :evidencias %></h3>
      <% if @cert_escolar.evidencias.attached? %>
        <% @cert_escolar.evidencias.each do |upload| %>
        <div class="row">
          <div class="col-md-9">
            <%= upload.filename %>
          </div>
          <div class="col-md-1">
            <small><%= link_to 'Eliminar', cert_escolar_delete_upload_attachment_path(:cert_escolar_id => @cert_escolar.id, :evidencias_id => upload.id), method: :delete, data: { confirm: 'Â¿Confirma Eliminar Archivo?' } %></small><br/>
          </div>
        </div>
        <% end %>
      <% end %>
      <div class="row">
        <h3>Agregar Evidencias</h3>
        <%= form.file_field :evidencias, multiple: true %>
      </div>
    </div> <hr>

    <div class="row">
    <div class="col-md-2">
      <%= form.label :observaciones %>
    </div>
    <div class="col.md-9">
      <%= form.text_area :observaciones, cols: 85, rows: 10 %>
    </div>
  </div><hr>

  
  <div class="row">
    <div class="field">
      <%= form.label :actualizar_status %>
      <%= form.select :status, options_for_select(CertEscolar.statuses.keys.to_a), size: 10 %>
    </div>
  </div></br>

  <div class="container">
  </div>

  <div class="actions">
    <%= form.submit "Guardar", class: "btn btn-primary btn-lg", size: 50 %>
    <%= link_to 'Mostrar', @cert_escolar, class: "btn btn-success btn-lg", size: 50 %> 
   <%= link_to 'Dashboard', cert_escolars_path, class: "btn btn-info btn-lg", size: 50 %>
  </div>
  
<% end %>
</div>