<div id="body-cert">
	<h1>Seguimiento Certificación</h1>
	<%= form_with(model: @cert_escolar, local: true) do |form| %>
  <% if @cert_escolar.errors.any? %>
      <% @cert_escolar.errors.full_messages.each do |message| %>
        <%= js add_gritter(message, title: "Aviso", sticky: false) %>
      <% end %>
  <% end %>

  <div class="actions">
    <%= form.submit "Guardar", class: "btn btn-primary btn-lg", size: 50 %>
    <%= link_to 'Regresar', cert_escolar_path(@cert_escolar), class: "btn btn-info btn-lg", size: 50 %>
  </div>
  <hr>

  <div class="col-md-8">
  	<div class="container">
  		<% @estandar = EstandarEtapaCertificacion.find_by(etapa_certificacion_id: @cert_escolar.paso, estandar_id: @cert_escolar.estandar) %>
   		<% @paso = EtapaCertificacion.find_by(id: @cert_escolar.estandar) %>
   		<p><%= @paso.id.to_s + ". " + @paso.nombre %></p>
   		<p><%= @cert_escolar.paso.to_s + "." + @cert_escolar.estandar.to_s + " " + @estandar.titulo  %></p>
   		<p><%= @paso.descripcion %></p>
   		<div class="col-md-3">
   			Puntos: <%=@estandar.puntaje %>
   		</div>
   		<div class="col-md-3">
   			Puntos Obtenidos: <%= @cert_escolar.puntaje.to_s %> 
   		</div>
   		<div class="col-md-3">
   			Puntaje Total: <%=  @estandar.puntaje_total %>
   		</div>
   		<div class="col-md-3">
    		Estatus: <%=  @cert_escolar.status %>
    	</div>
    	<p>
    	<% if logged_in?(:certificador, :cert_site_admin)  %>
    	 <%= form.text_field :puntaje %>
    	 <%= form.select :status, options_for_select(CertEscolar.statuses.keys.to_a, @cert_escolar.status) , size: 10 %>
  		<% else %>
      		<%= form.select :status, options_for_select(CertEscolar.statuses.keys.to_a, @cert_escolar.status) , size: 10 %>
  		<% end %>
  			
  		</p>
		<%= form.label :observaciones %>
      	<%= form.text_area :observaciones, cols: 85, rows: 3 %>
   	</div>
   </div> <!-- div-class-8 -->

   <div class="col-md-4">
   	<div class="container evidencias">
   		<% if @cert_escolar.evidencias.attached? %>
   			<% @cert_escolar.evidencias.each do |upload| %>
   			<div class=row>
   				<div class="col-sm-9">
            		<%= upload.filename %>
        		</div>
        		<div class="col-md-3">
            		<small><%= link_to 'Eliminar', cert_escolar_delete_upload_attachment_path(:cert_escolar_id => @cert_escolar.id, :evidencias_id => upload.id), method: :delete, data: { confirm: '¿Confirma Eliminar Archivo?' } %></small>
        		</div>
        	</div>
        	<% end %>
      	<% end %>
  			 
      	<div class="row">
        	<h4>Agregar Evidencias</h4>
        	<%= form.file_field :evidencias, multiple: true %>
      	</div>
      </div>
  </div> <!-- div-class-4 -->
<br>

<!--- DOCUMENTACION DE APOYO Y MATERIAL OBLIGATORIO -->

	<div class="col-md-12"></div>

	<div class="container">
      <div class="col-md-3">
        <div class="btn-group">
          <button type="button" class="btn btn-success btn-lg dropdown-toggle" data-toggle="dropdown">
            Material Obligatorio <span class="caret"></span>
          </button>
          <ul class="dropdown-menu" role="menu">
            <% if @estandar.obligatorio.attached? %>
              <% @estandar.obligatorio.each do |upload| %>
                <li><%= link_to upload.filename, upload, target: '_blank' %></li>
              <% end %>
            <% end %>
          </ul>
        </div>
      </div>
  
      <div class="col-md-3">
        <div class="btn-group">
          <button type="button" class="btn btn-info btn-lg dropdown-toggle" data-toggle="dropdown">
            Material Apoyo <span class="caret"></span>
          </button>

          <ul class="dropdown-menu" role="menu">
          <% if @estandar.apoyo.attached? %>
            <% @estandar.apoyo.each do |upload| %>
              <li><%= link_to upload.filename, upload, target: '_blank' %></li>
            <% end %>
          <% end %>
        </ul>
      </div>
    </div>
  </div>
 <% end %>
</div>