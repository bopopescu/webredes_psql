<div id="body-cert">
  
  <p><%= link_to 'Modificar', edit_cert_escolar_path(@cert_escolar), class: "btn btn-success btn-lg", size: 50 %>
  <%= link_to 'Dashboard', cert_escolars_path, class: "btn btn-default btn-lg", size: 50 %></p>
  
  <table class="table">
  <thead>
    <tr>
      <th>Escuela</th>
      <th>Estandar</th>
      <th>Descripci√≥n</th>
      <th>Observaciones</th>
      <th>Avance</th>
      <th>Puntos Cumplidos</th>
      <th>%</th>
      <th>Estatus Estandar</th>
    </tr>
  </thead>
  <tbody>
    <tr>
     
    <% @estandar = EstandarEtapaCertificacion.find_by(etapa_certificacion_id: @cert_escolar.paso, estandar_id: @cert_escolar.estandar) %>
     <td><%= @cert_escolar.paso.to_s + "." + @cert_escolar.estandar.to_s + " " + @estandar.titulo %></td>
     <td><%= @estandar.descripcion %></td>
     <td><%= @cert_escolar.observaciones %></td>
     <td><strong><%= @cert_escolar.puntaje %>
     <td><strong><%= @estandar.puntaje_total %></strong></td>
     <% avance = ((@cert_escolar.puntaje.to_f/@estandar.puntaje_total.to_f)*100).to_s %>
     <td><strong><small><%= number_with_precision(avance, precision: 2).to_s + "%"  %></small></strong></td>
     <td><%= @cert_escolar.status %></td>
      </tr>
    </tbody>
  </table>
   
  <p>
  <h2>Evidencias:</h2> <br/>
  <% if @cert_escolar.evidencias.attached? %>
    <% @cert_escolar.evidencias.each do |upload| %>
      <%= link_to upload.filename, upload, target: '_blank' %> <br/>
    <% end %>
  <% else %>
    <p>sin evidencias</p>
  <% end %>
</p>


  
  </div>
</div>