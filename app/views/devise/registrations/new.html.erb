<div class="container-fluid-crud">
  <h2><%= image_tag "manzana.jpg", width: 80 %><em> Unete a redes y completando el siguiente formulario</em></h2>
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
      
      <div class="row">
        <div class="col-sm-4 form-group">
          <h2>Datos Usuario</h2>
          <div class="field">
              <%= f.label :'nombre'  %><br />
              <%= f.text_field :nombre,  placeholder: "nombre", class: "form-control" %>
          </div>
          <div class="field">
            <%= f.label :'apellido paterno' %><br />
            <%= f.text_field :appaterno,  placeholder: "apellido paterno", class: "form-control" %>
          </div>

           

          <div class="field">
            <%= f.label :Correo_electronico %><br />
            <%= f.email_field :email, autofocus: true, placeholder: "correo electrónico", class: "form-control" %>
          </div>

          <div class="field">
            <%= f.label :contraseña %>
            <% if @minimum_password_length %>
            <em>(mínimo <%= @minimum_password_length %> caracteres)</em>
            <% end %><br />
            <%= f.password_field :password, placeholder: "contraseña", class: "form-control" %>
          </div>

          <div class="field">
            <%= f.label :confirmar_contraseña %><br />
            <%= f.password_field :password_confirmation, placeholder: "confirmar contraseña", class: "form-control" %>
          </div><br>

          <div class="field">
            <%= f.label :escuela %><brs>
            <%= f.collection_select(:escuela_id, Escuela.all, :id, :nombre, html_options: {class: "form-control"}) %>
             
          </div>
            
          <div class="actions">
            <%= f.submit "Enviar", class: "btn btn-primary", class: "form-group" %>
            <%= render "devise/shared/links" %>
            <%= link_to "Regresar", root_path, class: 'btn btn-info', class: "form-group" %>
          </div>
        </div>
        <div class="col-sm-2">
        </div>
         
    <% end %>
  </div>
</div>


    
   