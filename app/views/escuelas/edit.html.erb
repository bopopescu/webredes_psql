<div id="body-cert">
	<h1>Actualizar Datos Escuela</h1><hr>  
	<%= form_with(model: @escuela, local: true) do |form| %>
  <% if @escuela.errors.any? %>
      <% @escuela.errors.full_messages.each do |message| %>
         <%= js add_gritter(message, title: "Aviso", sticky: false) %>
      <% end %>
  <% end %>

  <div class="field-group">
    <% @nombre_escuela = User.find_by(id: @escuela.user_id) %>
    <h3>Escuela:&nbsp;<%= @nombre_escuela.razon_social %> </h3>
  </div>

  <div class="field-group">
    
    <h3>Certificador:&nbsp;<%= collection_select(:escuela, :certificador_id, User.certificadores, :id, :nombre_certificador, prompt: true) %></h3>
    
  </div><br>

<p></p>
  <div class="actions">
    <%= form.submit "Guardar", class: "btn btn-primary btn-lg", size: 50 %>
    <%= link_to 'Regresar', escuelas_path, class: "btn btn-info btn-lg", size: 50 %>
  </div>

<% end %>
</div>
