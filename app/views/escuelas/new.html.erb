<div id="body-cert">
	<h1>Agregar Escuela</h1>

	<%= form_with(model: @escuela, local: true) do |form| %>
	  <% if @escuela.errors.any? %>
	      <% @escuela.errors.full_messages.each do |message| %>
	         <%= js add_gritter(message, title: "Aviso", sticky: false) %>
	      <% end %>
	  <% end %>

  	  <div class="field-group">
  	    <%= form.label :"nombre" %>
  	    <%= collection_select(:escuela, :user_id, User.nuevas_escuelas, :id, :razon_social, prompt: true) %>
  	  </div>

  	  <div class="field-group">
  	    <%= form.label :certificador_id %>
  	    <%= collection_select(:escuela, :certificador_id , Certificador.all, :id, :id, prompt: true) %>
  	  </div> 

		<hr>
  
    	<div class="actions">
    	  <%= form.submit "Guardar", class: "btn btn-primary btn-lg", size: 50 %>
    	  <%= link_to 'Mostrar', @escuela, class: "btn btn-success btn-lg", size: 50 %> 
    	  <%= link_to 'Regresar', escuelas_path, class: "btn btn-info btn-lg", size: 50 %>
    	</div>

	<% end %>
</div>