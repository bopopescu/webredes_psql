<%= form_with(model: estandar_etapa_certificacion, local: true) do |form| %>
  <% if estandar_etapa_certificacion.errors.any? %>
      <% estandar_etapa_certificacion.errors.full_messages.each do |message| %>
      <%= js add_gritter(message, title: "Aviso", sticky: false) %>
      <% end %>
  <% end %>

  <div class="field">
     <div class="row">
      <div class="col-md-2">
        <%= form.label :"Seleccione Paso:" %>
      </div>
      <div class="col-md-4">
        <%= form.collection_select :etapa_certificacion_id, EtapaCertificacion.order(:id), :id, :nombre, include_blank: true   %>
      </div>
      <div class="col-md-3">
        <%= form.label :"estandar_id" %>
      </div>
      <div class="col-md-3">
        <%= form.text_field :estandar_id %>
      </div>
    </div><br>
    <div class="row">
      <div class="col-md-2">
        <%= form.label :"Título" %>
      </div>
      <div class="col-md-4">
        <%= form.text_area :titulo, cols: 40, rows: 4 %>
      </div>

      <div class="col-md-2">
        <%= form.label :"Descripción" %>
      </div>
      <div class="col-md-4">
        <%= form.text_area :descripcion, cols: 50, rows: 6 %>
      </div><br>
    </div>

  <div class="field">
    <%= form.label :evidencias %>
    <%= form.trix_editor :evidencias, cols: 50, rows: 6 %>
  </div><br>

  <div class="field">
    <%= form.label :detalle_puntaje %>
    <%= form.trix_editor :puntaje, cols: 50, rows: 6 %>
  </div><br>

  <div class="row">
    <div class="col-md-2">
      <%= form.label :puntaje_total %>
    </div>
    <div class="col-md-4">
      <%= form.text_field :puntaje_total %>
    </div>

    <div class="col-md-2">
      <%= form.label :observaciones %>
    </div>
    <div class="col-md-4">
      <%= form.text_area :observaciones, cols: 50, rows: 5 %>
    </div>
  </div>

  <h3> MATERIAL </h3>
  <hr>
    <div class="btn btn-default btn-lg">
      <%= form.label :apoyo %>
      <%= form.file_field :apoyo, multiple: true %>
    </div>
    
    <div class="btn btn-default btn-lg">
      <%= form.label :obligatorio %>
      <%= form.file_field :obligatorio, multiple: true %>
    </div>
  <hr>

  <div class="actions">
    <%= form.submit "Guardar Registro", class:"btn btn-primary btn-lg" %>
    <%= link_to 'Regresar',  etapa_certificacions_path, class:"btn btn-info btn-lg" %>
   
<% end %>

