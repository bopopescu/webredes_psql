<%= render "shared/certificate_sidebar" %>
<div id="body-cert">
<h1>Estandares por Paso de Certificación</h1>
<div class="nav-secundario">
<%= link_to 'Agregar Estandar Certificación', new_estandar_etapa_certificacion_path, class: "btn btn-default btn-lg" if logged_in?(:cert_site_admin) %>
<%= link_to 'Regresar a Pasos', etapa_certificacions_path, class: "btn btn-default btn-lg"  %>
<%= form_tag(estandar_etapa_certificacions_path, :method => "get", class: 'navbar-form navbar-left') do %>
  <div class="input-group">  
    <%= search_field_tag :search, params[:search], placeholder: "Búsqueda", class: "form-control" %>  
    <div class="input-group-btn">  
      <%= button_tag "", class: "btn btn-info glyphicon glyphicon-search", :name => nil%>  
    </div>  
  </div>  
<% end %>
</div>

<table class="table">
  <thead>
    <tr>
      <th>Paso ID</th>
      <th>Estandar ID</th>
      <th>Título</th>
      <th>Descripción</th>
      <th>Puntaje Total</th>
      <th colspan="3">Acciones</th>
    </tr>
  </thead>

  <tbody>
    <% @results.each do |estandar_etapa_certificacion| %>
      <tr>
        <td><%= estandar_etapa_certificacion.etapa_certificacion_id %></td>
        <td><%= estandar_etapa_certificacion.id %></td>
        <td><%= estandar_etapa_certificacion.titulo %></td>
        <td><%= estandar_etapa_certificacion.descripcion %></td>
        <td><%= estandar_etapa_certificacion.puntaje_total %></td>
        <td><%= link_to 'Detalle', estandar_etapa_certificacion %></td>
        <td><%= link_to 'Modificar', edit_estandar_etapa_certificacion_path(estandar_etapa_certificacion) if logged_in?(:cert_site_admin) %></td>
        <td><%= link_to 'Eliminar', estandar_etapa_certificacion, method: :delete, data: { confirm: '¿Confirma Eliminar el Registro?' } if logged_in?(:cert_site_admin) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

