<%= form_with(model: etapa_certificacion, local: true) do |form| %>
  <% if etapa_certificacion.errors.any? %>
      <% etapa_certificacion.errors.full_messages.each do |message| %>
        <%= js add_gritter(message, title: "Aviso", sticky: false) %>
      <% end %>
  <% end %>

  <div class="row">
    <div class="col-md-4">
      <%= form.label :Nombre_paso %>
      <%= form.text_area :nombre, cols: 50 %>
    </div>

    <div class="col-md-8">
      <%= form.label :descripcion %>
      <%= form.text_area :descripcion, cols: 100, rows: 10 %>
    </div>
  </div>

   

  <div class="actions">
    <%= form.submit "Guardar Registro", class: "btn btn-primary btn-lg" %>
  </div>
<% end %>

