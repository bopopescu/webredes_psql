<%= render "shared/application_nav_reconocimientos" %>
<div class="container-fluid-crud">

<p id="notice"><%= notice %></p>

<h1>Etapas Certificación</h1>
<%= link_to 'Agragar Etapa Certificación', new_etapa_certificacion_path, class: 'btn btn-default btn-lg' %>

<table class="table">
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Descripción</th>
      <th colspan="3">Acciones</th>
    </tr>
  </thead>

  <tbody>
    <% @etapa_certificacions.each do |etapa_certificacion| %>
      <tr>
        <td><%= etapa_certificacion.nombre %></td>
        <td><%= etapa_certificacion.descripcion %></td>
        <td><%= link_to 'Mostrar', etapa_certificacion %></td>
        <td><%= link_to 'Modificar', edit_etapa_certificacion_path(etapa_certificacion) %></td>
        <td><%= link_to 'Eliminar', etapa_certificacion, method: :delete, data: { confirm: '¿Confirma Eliminar el Registro?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
</div>


