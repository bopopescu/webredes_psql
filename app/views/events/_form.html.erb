<%= form_with(model: @event, local: true) do |form| %>
  <% if @event.errors.any? %>
      <% @event.errors.full_messages.each do |message| %>
        <%= js add_gritter(message, title: "Aviso", sticky: false) %>
      <% end %>
  <% end %>


  <div class="field">
    <%= form.label :titulo %>
    <%= form.text_field :titulo, size: 60 %>
  </div>

  <div class="field">
    <%= form.label :detalle %>
    <%= form.text_area :detalle %>
  </div>

  <div class="field">
    <%= form.label :lugar %>
    <%= form.text_field :lugar, size: 60, class: 'input' %>
  </div>

  <div class="field">
    <%= form.label "Fechas" %>
    <%= form.date_field :inicio, class: "daterange" %>
  </div>

  <div class="field">
    <%= form.label "Fecha Fin" %>
    <%= form.datetime_field :end %>
  </div>

  <div class="field">
    <%= form.label :expositor %>
    <%= form.text_area :expositor %>
  </div>

  <div class="btn btn-default btn-lg">
    <%= form.label :foto %>
    <%= form.file_field :foto %>
  </div>

  <div class="actions">
    <%= form.submit 'Guardar', class: "btn btn-primary btn-lg", size: 50 %>
    <%= link_to 'Mostrar', @event, class: "btn btn-default btn-lg", size: 50 %> 
   <%= link_to 'Regresar a Eventos', events_path, class: "btn btn-info btn-lg", size: 50 %>
  </div>
  
<% end %>




