<!DOCTYPE html>
<html>
  <head>
    <title><%= content_for?(:title) ? yield(:title) : "WebRedES" %></title>
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1" />
    
     <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.0/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.0/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.0/js/bootstrap.min.js"></script> 
    
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>

  </head>  

  <body>
    <%= render 'shared/application_nav' %>
    <% @sidebar = EtapaCertificacion.all.order(:id) %>
     
   
    <div class="container"> 
    <div class="row">
      <div class="col-md-12">
        <% flash.each do |key, message| %>
          <div class="text-center alert alert-<%= key == 'notice'? 'success': 'danger' %>">
            <%= message %> 
          </div>
        <% end %>
        
        <% if logged_in?(:cert_site_admin, :escuela, :certificador) %>
          <%= render 'shared/certificate_sidebar' %>
        <% end %>

        <%= yield %> 
      </div>
    </div> 
  </div>

    <%= js add_gritter(flash[:notice], title: "Aviso", sticky: false) %>
    
  </body>
  <%= render 'shared/application_footer' %>
</html>
