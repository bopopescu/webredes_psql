<%= render 'shared/certificate_sidebar' if logged_in?(:site_admin, :certificador, :escuela) %>
<div id="body-cert">
	<p>
	  <strong>Pregunta:</strong>
	  <%= @preguntas_cert.pregunta %>
	</p>
	
	<p>
	  <strong>Respuesta:</strong>
	  <%= @preguntas_cert.respuesta.html_safe %>
	</p>
	
	<%= link_to 'Modificar', edit_preguntas_cert_path(@preguntas_cert) %> |
	<%= link_to 'Regresar', preguntas_certs_path %>
</div>