<div class='col-sm-10 controls ui-sortable'>
<% if @object.apoyo.attached? %>

	<% @object.apoyo.map do |archivo| %>
		<div class="row">
		   <div class="col-md-4">	
		      <%= link_to archivo.filename, Rails.application.routes.url_helpers.rails_blob_path(archivo, only_path: true), target: '_blank' %>
		   </div>
		   <div class="col-md-2">
			   <%= link_to @object.remove_apoyo,  class: "btn btn-danger btn-remove-image" do %>
  				  <i class="icon-white icon-trash"> </i>
			   <% end %>
		   </div> 
		</div><br>
	<% end %>
<% end %>
	<div class="row">
		<p><%= form.file_field :apoyo, multiple: true %></p>
	</div>
</div>