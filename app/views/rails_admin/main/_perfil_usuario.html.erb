<script type="text/javascript">
  $(document).ready(function() {
  		valor = '';
  		$('#user_escuela_id_field').hide();
     	$('#user_roles').change(function(event) {
     		valor = $('#user_roles').val();
     		 console.log (valor);
     		 if (valor == 'escuela') {
     		 	$('#user_escuela_id_field').show();
     		 }else{
     		 	$('#user_escuela_id_field').hide();
     		 }
     		 
     	});
     	 
  });
</script>
