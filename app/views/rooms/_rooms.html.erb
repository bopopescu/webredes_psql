<div class="row">
  <div class="col-12">
    <%= link_to new_room_path, class: "btn btn-primary" do %>
      Crear Sala
    <% end %>
  </div><br>
  <div class="col-md-12">
    <% if @rooms.present? %>
        <% @rooms.each do |room| %>
          <p><%= link_to room.name_string, room_path(room), class: "navbar btn btn-primary" %></p>
        <% end %>   
    <% else %>
      <div class="text-muted">
        No se han creado salas
      </div>
    <% end %>
  </div>
</div>
