<div id="noticias" class="container-fluid">
  <div class="container-fluid bg-grey">
  <div class="row">
    <div class="col-sm-8">
      <h2>NOTICIAS</h2>
      <h4><%= @avisos.titulo %></h4>
      <p><small><em><%= @avisos.fecha.strftime("%d-%m-%Y") %></em></small></p>
      <p><%= @avisos.detalle %></p>
      <p><%= image_tag @avisos.imagen.to_s %></p>
      <%= link_to 'Continuar Lectura', aviso_path(@avisos),class: "btn btn-default btn-lg"  %>
      <% if user_signed_in? %>
         <% if current_user.is_admin? %>
            <%= link_to 'Editar', edit_aviso_path(@avisos),class: "btn btn-default btn-lg"  %>
         <% end %>
      <% end %>
    </div>
    <div class="col-sm-4">
      <span class="glyphicon glyphicon-list-alt logo"></span>
    </div>
  </div>
</div>
